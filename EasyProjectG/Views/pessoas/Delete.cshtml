            <div class="modal-body">
                <!-- .form-group -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.pessoaId)
                <hr />
                <div class="col-md-12">
                    <div class="form-label-group">
                        @Html.LabelFor(model => model.pessoaNome, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.pessoaNome, new { htmlAttributes = new { @class = "form-control placeholder-shown", @placeholder = "Nome", @required = "required" } })
