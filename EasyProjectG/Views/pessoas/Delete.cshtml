                        @Html.EditorFor(model => model.pessoaFoto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pessoaFoto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pessoaEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.pessoaEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pessoaEmail, "", new { @class = "text-danger" })
