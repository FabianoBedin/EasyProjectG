                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pessoaLinkLattes, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.pessoaLinkLattes, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.pessoaLinkLattes, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
