                    </div>
                </div>
            </div><!-- /.modal-body -->
            <!-- .modal-footer -->
            <div class="modal-footer">
                <button type="submit" value="DELETE" class="btn btn-danger"> Delete </button>
                <button type="button" class="btn btn-light" data-dismiss="modal"> Close </button>
            </div><!-- /.modal-footer -->
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
