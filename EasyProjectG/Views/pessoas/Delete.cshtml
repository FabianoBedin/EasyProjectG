                        @Html.ValidationMessageFor(model => model.pessoaEspecialidade, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pessoaFormacao, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.pessoaFormacao, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.pessoaFormacao, "", new { @class = "text-danger" })
