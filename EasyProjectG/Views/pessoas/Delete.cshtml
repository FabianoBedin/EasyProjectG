                        @Html.EditorFor(model => model.pessoaFone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pessoaFone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pessoa_entidadeId, "pessoa_entidadeId", htmlAttributes: new { @class = "control-label col-md-2" })
